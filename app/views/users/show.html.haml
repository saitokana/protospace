.container.user-page
  %header.user-nav
    .media
      .media-left
        = image_tag current_user.avatar, width: 64, height: 64
      .media-body
        %h4#top-aligned-media.media-heading
          = current_user.name
          %span.label.label-default.project-number
            = current_user.prototypes.count
            %i Dishes
        .btn.btn-primary.navbar-btn
          = link_to "memo", memos_path

.container.proto-list
  .row
    = render partial: 'prototypes/prototype'
