.container.user-new
  = form_for @user do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, value: @user.name
            .user-image.col-md-2{ style: 'background-image url(@user.image);' }
              %button.btn.btn-primary Change image
              = f.file_field :image, value: @user.image
          = f.text_field :email, class: "user-email", value: @user.email
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, value: @user.member
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: "30", rows: "4", value: @user.profile
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :position, cols: "30", rows: "4", value: @user.position
      .row.text-center.user-btn
        %button.btn.btn-lg.btn-primary.btn-block{ type: "submit" } Save
