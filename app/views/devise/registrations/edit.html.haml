= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "container user-new" }) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        %h2 Edit Profile
        .user-name_image.row
          .user-name.col-md-10
            = f.text_field :name
          .user-image.col-md-2
            =button_tag "Change image", class: "btn btn-primary"
            = f.file_field :avatar
        = f.text_field :email, class: "user-email"
      .col-md-12
        %h4 Member of
        .user-user-member.row
          .user-name.col-md-12
            = f.text_field :member
        %h4 Profile
        .user-user-profile.row
          .user-name.col-md-12
            = f.text_area :profile, cols: "30", rows: "4"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_area :position, cols: "30", rows: "4"
    .field
      = f.label :current_password
      = f.password_field :current_password, autocomplete: "off"
    .row.text-center.user-btn
      = f.submit "Update"
