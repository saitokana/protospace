.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name),class: "new-user" ) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, autofocus: true, placeholder: "Input Username"
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              = f.file_field :avatar
          = f.email_field :email, autofocus: true, placeholder: "Email address", class: 'user-email', id: 'inputEmail'
          = f.password_field :password, autocomplete: "off", placeholder: "Password", class: 'user-password', id: 'inputPassword'
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password"
      .row.text-center.user-btn
        = f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block'

