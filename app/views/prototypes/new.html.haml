
.container.proto-new
  = form_for @prototype do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, placeholder: 'what did you cook?', class: 'proto-new-title'
      = f.fields_for :captured_images do |image|
        .row
          .col-md-12
            .cover-image-upload
              = image_tag (), { id: 'main_image_preview', class: 'col-md-12' }
              = image.file_field :main, required: true
          .col-md-12
            %ul.proto-sub-list.list-group
              - 1.upto(3) do |i|
                %li.list-group-item.col-md-4
                  .image-upload
                    = image_tag (), id: "sub_#{i}"
                    = image.file_field :"sub#{i}"
              %li.list-group-item.col-md-4#hide_form
                .image-upload
                  = image_tag (), { id: 'sub_4'}
                  = image.file_field :sub4
              %li.list-group-item.col-md-4#add_new_form
                .image-upload-plus
                  %span +
        .row.proto-description
          .col-md-12
            = f.text_field :cost, placeholder: 'how much did it cost?'
          .col-md-12
            = f.text_field :time, placeholder: 'how long did it take?'
          .col-md-12
            = f.text_field :url, placeholder: 'URL for the recipe'
        = f.fields_for :tags do |tag|
          .col-md-12
            %h4 Material
            .row
              .col-md-3
                = tag.text_field :'0'
              .col-md-3
                = tag.text_field :'1'
              .col-md-3
                = tag.text_field :'2'
        .row.text-center.proto-btn
          = f.submit 'eat!!', class: 'btn btn-primary btn-block'

